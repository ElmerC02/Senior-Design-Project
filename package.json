{
  "name": "sprint3-memo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:fe": "npm --workspace @umg/frontend run dev",
    "dev:api": "npm --workspace @umg/server run dev",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down -v",
    "db:logs": "docker compose logs -f db",
    "predev": "npm run db:up",
    "build": "npm --workspaces run build",
    "start": "npm --workspace @umg/server run start",
    "dev": "wait-on tcp:127.0.0.1:5433 && concurrently -n api,web -c auto \"npm run dev:api\" \"npm run dev:fe\"",
    "postdev": "echo Dev stopped. (DB stays up; run `npm run db:down` to stop it.)"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "wait-on": "^9.0.1"
  }
}